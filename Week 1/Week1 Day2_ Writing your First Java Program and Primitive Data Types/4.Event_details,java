import java.util.*;
class Main {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);

        System.out.println("Enter the name of the event");
        String eventName = scanner.nextLine();

        System.out.println("Enter the type of the event");
        String eventType = scanner.nextLine();

        System.out.println("Enter the number of people expected");
        int expectedCount = scanner.nextInt();

        System.out.println("Is it a paid entry? (Type Y or N)");
        char isPaid = scanner.next().charAt(0);

        System.out.println("Enter the projected expenses (in lakhs) for this event");
        double projectedExpense = scanner.nextDouble();

        System.out.println("Event Name : " + eventName);
        System.out.println("Event Type : " + eventType);
        System.out.println("Expected Count : " + expectedCount);
        System.out.println("Paid Entry : " + isPaid);
        System.out.println("Projected Expense : " + String.format("%.1f", projectedExpense) + "L");
    }
}
